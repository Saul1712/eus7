<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eus7.Vistas.Login">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#66FFB2">
            <Label Text="VENTA DE INICIO DE SESESIÓN!" FontSize="18" HorizontalTextAlignment="Center" TextColor="Black"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña" IsPassword="True"/>
            <Button x:Name="btnInicio" Text="INICIAR SESION" Clicked="btnInicio_Clicked" CornerRadius="15" BackgroundColor="Black" TextColor="White"/>
            <Button x:Name="btnRegistro" Text="Registro" Clicked="btnRegistro_Clicked" CornerRadius="15" BackgroundColor="Black" TextColor="White"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>