<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eus7.Vistas.Registro">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#FFFFCC">
            <Label Text="VENTANA DE REGISTRO" FontSize="18" HorizontalTextAlignment="Center" TextColor="Black" />
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la contraseña"/>
            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked" CornerRadius="15" BackgroundColor="Black" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>